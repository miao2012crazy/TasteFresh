<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_267"
    android:layout_gravity="center"
    android:background="#0000"
    android:layout_height="@dimen/dp_275">
    <LinearLayout
        android:background="@drawable/shape_product_next_week"
        android:layout_width="@dimen/dp_267"
        android:layout_height="@dimen/dp_267"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_next_product_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_173"
            android:background="@mipmap/nextproduct" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="@dimen/dp_15"
            android:text="titleasld啊手拉手按理说贷款；按理说贷款；拉斯柯达；拉斯柯达；拉斯柯达"
            android:textColor="#222"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/iv_product_img"
        android:layout_width="@dimen/dp_267"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_next_num"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="限量：1000份"
            android:textColor="#555" />
        <Button
            android:layout_marginEnd="@dimen/dp_11"
            android:id="@+id/btn_sign_up"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            android:text="立即报名"
            android:background="@drawable/shape_tryout"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_33" />
    </LinearLayout>

</RelativeLayout>