<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_return" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:drawableLeft="@mipmap/ic_tel"
            android:drawablePadding="@dimen/dp_6"
            android:hint="手机号"
            android:padding="@dimen/dp_20"
            android:paddingStart="@dimen/dp_6"
            android:textColorHint="#b2b2b2"
            android:textSize="@dimen/sp_14"
            android:theme="@style/et_login_style" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/yzm"
                android:drawablePadding="@dimen/dp_6"
                android:hint="验证码"
                android:padding="@dimen/dp_20"
                android:paddingStart="@dimen/dp_6"
                android:textColorHint="#b2b2b2"
                android:textSize="@dimen/sp_14"
                android:theme="@style/et_login_style" />

            <TextView
                android:id="@+id/tv_get_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dp_4"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fb4890"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:drawableLeft="@mipmap/psd_01"
            android:drawablePadding="@dimen/dp_6"
            android:hint="设置密码"
            android:padding="@dimen/dp_20"
            android:paddingStart="@dimen/dp_6"
            android:textColorHint="#b2b2b2"
            android:textSize="@dimen/sp_14"
            android:theme="@style/et_login_style" />


        <EditText
            android:id="@+id/et_confirm_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:drawableLeft="@mipmap/psd_02"
            android:drawablePadding="@dimen/dp_6"
            android:hint="确认密码"
            android:padding="@dimen/dp_20"
            android:paddingStart="@dimen/dp_6"
            android:textColorHint="#b2b2b2"
            android:textSize="@dimen/sp_14"
            android:theme="@style/et_login_style" />

        <Button
            android:id="@+id/btn_regedit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity=""
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/selector_login"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="注册代表您同意用户协议"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_argument"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="《尝新用户协议》"
                android:textColor="#fb4890" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
