<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/layout_title_detail"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="vertical"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:id="@+id/tab_report"
            android:background="#fff"
            app:tabIndicatorColor="#fa4990"
            app:tabIndicatorHeight="@dimen/dp_3"
            android:layout_width="match_parent"
            app:tabTextColor="#414141"
            app:tabSelectedTextColor="#fa4990"
            android:layout_height="@dimen/dp_44">
        </android.support.design.widget.TabLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fa4990"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:background="#fff"
        android:id="@+id/view_pager_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>