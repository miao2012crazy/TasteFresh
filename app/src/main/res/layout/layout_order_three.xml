<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_report_item"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_8"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp_1"
    android:layout_height="@dimen/dp_133"
    >

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_product_order"
            android:layout_width="@dimen/dp_113"
            android:layout_height="@dimen/dp_113"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@mipmap/detail_example" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@+id/iv_product_order"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题"
            android:textColor="#222"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_product_name"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginTop="17dp"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text="填写问卷和试用报告后可退押金59元"
            android:textColor="#666"
            android:textSize="@dimen/sp_10" />


        <TextView
            android:layout_margin="@dimen/dp_8"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_23"
            android:background="@drawable/shape_commit_report"
            android:gravity="center"
            android:text="提交报告"
            android:textColor="#fb8bb8"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

</LinearLayout>
