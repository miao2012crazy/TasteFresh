<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_return"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_return" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:drawableLeft="@mipmap/ic_tel"
            android:padding="@dimen/dp_20"
            android:paddingStart="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:text="admin1"
            android:theme="@style/et_login_style" />

        <EditText
            android:id="@+id/et_psd"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:drawableLeft="@mipmap/psd"
            android:padding="@dimen/dp_20"
            android:paddingStart="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:text="111111"
            android:theme="@style/et_login_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:autoLink="all"
                android:text="忘记密码"
                android:textColor="#fff" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity=""
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/selector_login"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_4"
        android:gravity="center"
        android:text="别  人  说  的  都  不  算，自  己  试  了  才  知  道。"
        android:textColor="#cce0e9ed"
        android:textSize="@dimen/sp_10" />
</RelativeLayout>