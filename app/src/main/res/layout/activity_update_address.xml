<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <include layout="@layout/layout_title_detail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#fff">

        <TextView
            android:textColor="#666"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="收货人"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:maxEms="10"
            android:textColor="#222"
            android:id="@+id/et_recive_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_et"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#fff">

        <TextView
            android:textColor="#666"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="联系电话"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:textColor="#222"
            android:inputType="phone"
            android:id="@+id/et_recive_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_et"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
  <LinearLayout
      android:id="@+id/ll_recive_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#fff">

        <TextView
            android:textColor="#666"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:text="所在地区"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_area"
            android:textColor="#222"
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_et"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/sp_14" />
      <ImageView
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/dp_10"
          android:src="@mipmap/ic_right"
          android:layout_width="@dimen/dp_20"
          android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <EditText
        android:textSize="@dimen/sp_13"
        android:hint="详细地址"
        android:layout_marginTop="@dimen/dp_1"
        android:textColor="#222"
        android:id="@+id/et_recive_address_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_et"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="top|left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#fff">
        <CheckBox
            android:button="@null"
            android:drawableLeft="@drawable/selector_rb"
            android:drawablePadding="@dimen/dp_6"
            android:id="@+id/cb_address_default"
            android:textSize="@dimen/sp_13"
            android:textColor="#333"
            android:text="设为默认地址"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>




    <TextView
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:textSize="@dimen/sp_17"
        android:text="保存"
        android:textColor="#fff"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_login_btn"
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50" />
</LinearLayout>