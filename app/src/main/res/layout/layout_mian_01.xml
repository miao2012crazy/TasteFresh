<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="#fff"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_none"
        android:layout_width="@dimen/dp_4"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_8"
        android:background="#fb4890" />

    <TextView
        android:id="@+id/tv_main_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/tv_none"
        android:gravity="center"
        android:textColor="@color/text_color_333"
        android:textSize="@dimen/sp_13" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_main_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_color_666"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_hour"
            style="@style/time_style"
            android:layout_marginStart="@dimen/dp_6"
            android:background="@drawable/shape_time_hour" />

        <TextView style="@style/time_interval" />

        <TextView
            android:id="@+id/tv_minute"
            style="@style/time_style"
            android:background="@drawable/shape_time_hour" />

        <TextView style="@style/time_interval" />

        <TextView
            android:id="@+id/tv_second"
            style="@style/time_style"
            android:background="@drawable/shape_time_overplus" />
    </LinearLayout>
</RelativeLayout>