<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <include layout="@layout/layout_title_detail" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#fff"
            android:orientation="horizontal">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_old_psd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/shape_et_login"
                android:hint="请输入原密码"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <EditText
                android:inputType="textPassword"

                android:id="@+id/et_new_psd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/shape_et_login"
                android:hint="请输入新密码"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_confirm_psd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@drawable/shape_et_login"
                android:hint="请再一次输入新密码"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_save_psd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/shape_login_btn"
            android:text="确认修改"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>
