<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:layout_marginEnd="@dimen/dp_7"
    android:layout_marginStart="@dimen/dp_7"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@drawable/shape_address"
    android:elevation="@dimen/dp_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="left|center_vertical"
            android:text="姓名"
            android:textColor="#222"
            android:textSize="@dimen/sp_13"
            android:id="@+id/tv_address_name"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent" />
        <TextView
            android:textColor="#222"
            android:textSize="@dimen/sp_13"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:text="18222703922"
            android:id="@+id/tv_address_tel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal">
        <TextView
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:text="天津市西青区大寺佳和雅庭123号"
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_address_default"
            android:textSize="@dimen/sp_13"
            android:textColor="#333"
            android:text="默认地址"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_update"
            android:drawablePadding="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_35"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#333"
            android:textSize="@dimen/sp_12"
            android:text="编译"
            android:drawableLeft="@mipmap/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_delete"
            android:drawablePadding="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#333"
            android:textSize="@dimen/sp_12"
            android:text="删除"
            android:drawableLeft="@mipmap/address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>