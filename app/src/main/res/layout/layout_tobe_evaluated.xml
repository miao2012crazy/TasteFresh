<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_133"
    android:background="@drawable/shape_evaluated"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:orientation="horizontal">
    <ImageView
        android:src="@mipmap/nextproduct"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:id="@+id/iv_product_report_img"
        android:layout_width="@dimen/dp_113"
        android:layout_height="@dimen/dp_113" />
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#222"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_23"
            android:text="标题"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_report_tag"
            android:textColor="#666"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_title"
            android:maxLines="1"
            android:text="填写问卷调查" />

            <Button
                android:id="@+id/btn_commit_report"
                android:layout_marginBottom="@dimen/dp_12"
                android:textColor="#fb4890"
                android:textSize="@dimen/sp_12"
                android:background="@drawable/shape_commit_report"
                android:text="提交报告"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23" />

    </RelativeLayout>


    
    
    
    
</LinearLayout>