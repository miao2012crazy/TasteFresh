<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title_detail"/>
    <RelativeLayout
        android:id="@+id/rl_user_head_img"
        android:background="@drawable/selector_user_center"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <TextView
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="头像" />
        <ImageView
            android:id="@+id/iv_user_head_img"
            android:background="@drawable/shape_message"
            android:layout_marginEnd="@dimen/dp_34"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/selector_user_center"
        android:id="@+id/rl_user_name"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="用户名" />
        <TextView
            android:id="@+id/tv_user_name"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"/>

        <ImageView

            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/selector_user_center"
        android:id="@+id/rl_user_sex"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="性别" />
        <TextView
            android:id="@+id/tv_sex"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_user_date"
        android:background="@drawable/selector_user_center"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="出生日期" />
        <TextView
            android:id="@+id/tv_date"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_real_name"
        android:background="@drawable/selector_user_center"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:textColor="#333"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:text="绑定手机号" />
        <TextView
            android:id="@+id/tv_user_tel"
            android:textColor="#999"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </RelativeLayout>
</LinearLayout>

