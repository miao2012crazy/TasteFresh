<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_report_item"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_8"
    android:layout_width="match_parent"
    android:elevation="@dimen/dp_2"
    android:layout_height="@dimen/dp_140"
    >

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_93">

        <ImageView
            android:id="@+id/iv_product_order"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_74"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@mipmap/detail_example" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@+id/iv_product_order"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLines="2"
            android:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题"
            android:textColor="#222"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_product_order"
            android:layout_alignStart="@+id/tv_product_name"
            android:text="押金："
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_deposit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:text="¥99.99"
            android:textColor="#ff4800"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>


    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_get_shipment_info"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_37"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_toStartOf="@+id/tv_confirm"
            android:background="@drawable/shape_cancel_order"
            android:text="查看物流"
            android:textColor="#666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_37"
            android:layout_alignBottom="@+id/tv_get_shipment_info"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:background="@drawable/shape_order_btn"
            android:text="确认收货"
            android:textColor="#fb8bb8"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</LinearLayout>